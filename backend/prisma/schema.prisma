generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role{
  Admin
  Customer
  Cashier
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String
  role  Role
  @@map("users")
}

model Product{
  id String @id @default(uuid())
  name String 
  description String
  ImageUrl String @unique
  price Float
  @@map("products")
}
